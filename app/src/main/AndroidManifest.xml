<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sfit.torpid">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Menu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Bus"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Train"
            android:screenOrientation="portrait" />
        <activity
            android:name=".western"
            android:screenOrientation="portrait" />
        <activity
            android:name=".central"
            android:screenOrientation="portrait" />
        <activity
            android:name=".harbour"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QRCode"
            android:screenOrientation="portrait" />
        android:name="com.sfit.Torpid.EnableMultiDex"
        android:hardwareAccelerated="true"
        android:icon="@drawable/wowio_launch_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        tools:node="replace"
        <activity
            android:name=".Table"
            android:label="@string/title_activity_table"
            android:parentActivityName=".Main"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sfit.torpid.Main" />
        </activity>
    </application>

</manifest>